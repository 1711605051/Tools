        android:layout_marginTop="10dp"
        android:id="@+id/q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="#000"
        android:textSize="19sp"
        android:textStyle="normal" />
</LinearLayout>